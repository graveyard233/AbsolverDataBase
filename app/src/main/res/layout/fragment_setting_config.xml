<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SettingFragmentTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/config_setting"
                        app:drawableStartCompat="@drawable/ic_config" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/grey_split_line" />


                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/settingConfig_switch_gaussianBlur"
                        style="@style/SettingFragmentSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dialogGaussianBlur" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/settingConfig_switch_askBeforeImport"
                        style="@style/SettingFragmentSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ask_before_import" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/settingConfig_switch_useCNEditionMod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingFragmentSwitch"
                        android:text="@string/use_CNEditionMod"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/settingConfig_switch_useNightMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingFragmentSwitch"
                        android:text="@string/nightMode_follow_system"/>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/settingConfig_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:valueFrom="0"
                        android:valueTo="5" />

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>