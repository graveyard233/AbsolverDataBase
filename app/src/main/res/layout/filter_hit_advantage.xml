<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceTitleMedium"
        android:text="@string/movesFilter_hitAdvantage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_movesFilter_hitAdvantage_textMin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:textAppearance="?textAppearanceBodyLarge"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeMinTextSize="6sp"
            tools:text="0"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/dialog_movesFilter_hitAdvantage_rangeSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:stepSize="1"
            android:valueFrom="0"
            android:valueTo="20"/>
        <TextView
            android:id="@+id/dialog_movesFilter_hitAdvantage_textMax"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:textAppearance="?textAppearanceBodyLarge"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeMinTextSize="6sp"
            tools:text="20"/>
    </LinearLayout>


</LinearLayout>