<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_oneMove_msg_guideline_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_oneMove_msg_guideline_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bar_oneMove_msg_guideline_25"
        app:layout_constraintEnd_toStartOf="@+id/bar_oneMove_msg_guideline_75"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:id="@+id/bar_oneMove_msg_textLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovesMsgLeftText"
            android:gravity="start|bottom"
            tools:text="+11/+7"/>
        <TextView
            android:id="@+id/bar_oneMove_msg_textRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/MovesMsgLeftText"
            android:gravity="end|bottom"
            tools:text="12å¸§"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>