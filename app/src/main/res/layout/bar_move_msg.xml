<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/baseMsgLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:background="?colorSecondaryContainer">


                    <ImageView
                        android:id="@+id/msg_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/move_example_0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow android:layout_weight="1">

                    <ImageView
                        android:id="@+id/msg_startSideImg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:srcCompat="@drawable/ic_upper_right" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_become" />

                    <ImageView
                        android:id="@+id/msg_endSideImg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:srcCompat="@drawable/ic_upper_left" />


                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/msg_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?textAppearanceTitleMedium"
                        tools:text="直拳" />

                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/msg_strength"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?textAppearanceBodyMedium"
                        tools:text="力度:轻" />

                    <TextView
                        android:id="@+id/msg_range"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:textAppearance="?textAppearanceBodyMedium"
                        tools:text="范围:2.01" />

                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/msg_attackTowardDetail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?textAppearanceBodyLarge"
                        tools:text="左中位纵向" />

                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/msg_effect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?textAppearanceBodyMedium"
                        tools:text="特效:侧闪" />


                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/msg_startFrame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    tools:text="起手帧数:12" />

                <TextView
                    android:id="@+id/msg_phyOutput"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    tools:text="自身体力消耗:12" />

                <TextView
                    android:id="@+id/msg_phyWeakness"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    tools:text="敌人体力削弱:12" />

                <TextView
                    android:id="@+id/msg_hitAdvantage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    tools:text="命中优势帧:12" />

                <TextView
                    android:id="@+id/msg_defenseAdvantage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    tools:text="防御优势帧:12" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/msg_ceMod_morePart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/msg_ceMode_strengthBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?textAppearanceBodyMedium"
                    tools:text="力量:A" />

                <TextView
                    android:id="@+id/msg_ceMode_agilityBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?textAppearanceBodyMedium"
                    tools:text="敏捷:B" />

                <TextView
                    android:id="@+id/msg_ceMode_flexibleBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?textAppearanceBodyMedium"
                    tools:text="机动:C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/msg_ceMode_cancelPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?textAppearanceBodyMedium"
                    tools:text="取消点:5" />

                <TextView
                    android:id="@+id/msg_ceMode_hitFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?textAppearanceBodyMedium"
                    tools:text="打击帧:7" />

                <TextView
                    android:id="@+id/msg_ceMode_yellowAttackFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?textAppearanceBodyMedium"
                    tools:text="黄攻帧:2" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>