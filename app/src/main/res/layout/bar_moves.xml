<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_move_line_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_move_line_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_move_line_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_move_line_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_move_line_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bar_move_line_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/bar_move_side_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/upper_right_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_move_line_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bar_move_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/img_add_move_bg"
        app:srcCompat="@drawable/ic_add_move"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_move_line_30"
        app:layout_constraintStart_toStartOf="@+id/bar_move_line_10"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bar_move_side_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/upper_right_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_move_line_40"
        app:layout_constraintStart_toStartOf="@+id/bar_move_line_30"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bar_move_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/img_add_move_bg"
        app:srcCompat="@drawable/ic_add_move"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_move_line_60"
        app:layout_constraintStart_toStartOf="@+id/bar_move_line_40"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bar_move_side_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/upper_right_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_move_line_70"
        app:layout_constraintStart_toStartOf="@+id/bar_move_line_60"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bar_move_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/img_add_move_bg"
        app:srcCompat="@drawable/ic_add_move"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_move_line_90"
        app:layout_constraintStart_toStartOf="@+id/bar_move_line_70"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bar_move_side_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/upper_right_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bar_move_line_90"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>