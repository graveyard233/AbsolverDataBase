<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--	用于用于fragment_color_board.xml-->
	<style name="ColorChipItem">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">128dp</item>
		<item name="android:padding">8dp</item>
		<item name="android:textAppearance">?textAppearanceLabelLarge</item>
		<item name="layout_flexGrow">1</item>
	</style>

	<style name="MaterialButtonToggleGroup.IconOnlyButton"
		parent="Widget.Material3.Button.OutlinedButton">
		<item name="iconPadding">0dp</item>
		<item name="android:minWidth">30dp</item>
		<item name="iconGravity">textStart</item>
		<item name="android:minHeight">30dp</item>
		<item name="iconSize">37dp</item>
		<item name="android:layout_weight">1</item>
	</style>

	<style name="SettingFragmentTitleText">
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textAppearance">?textAppearanceTitleLarge</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:drawablePadding">15dp</item>
	</style>
	<style name="SettingFragmentSwitch">
		<item name="android:paddingStart">20dp</item>
		<item name="android:textAppearance">?textAppearanceBodyLarge</item>
	</style>
	<style name="SettingFragmentItemText">
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingStart">20dp</item>
		<item name="android:textAppearance">?textAppearanceBodyLarge</item>
		<item name="android:drawablePadding">15dp</item>
		<item name="android:clickable">true</item>
		<item name="android:background">?selectableItemBackground</item>
	</style>

